generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UpdateHistory {
  checkedOn DateTime @default(now())
  hash      String
  pageURL   String   @id
  Artist    Artist[]
  Album     Album[]
}

model Artist {
  fromUpdate         UpdateHistory @relation(fields: [url], references: [pageURL])
  url                String        @id
  name               String
  bio                String?
  imageUrl           String?
  fromRelatedArtists Artist[]      @relation("RelatedArtists")
  toRelatedArtists   Artist[]      @relation("RelatedArtists")
  albums             Album[]
  corrections Correction[]
  lastModified       DateTime
}

model Album {
  name   String
  year   Int?
  rating Decimal

  artist    Artist @relation(fields: [artistUrl], references: [url])
  artistUrl String

  imageUrl String?

  corrections Correction[]

  fromUpdate UpdateHistory @relation(fields: [pageURL], references: [pageURL])
  pageURL    String

  @@id([artistUrl, name])
}


model Correction {
  id Int @id @default(autoincrement())
  submittedOn DateTime @default(now())
  status String @default("pending")

  artist Artist? @relation(fields: [artistUrl], references: [url])
  artistUrl String?

  proposedName String?
  selectedImageURL String?
  proposedBiographyChange String?

  album Album? @relation(fields: [albumArtistURL, albumName], references: [artistUrl, name])
  albumArtistURL String?
  albumName String?
     proposedCoverURL String?
     proposedReleaseYear Int?
     proposedRating Decimal?
}
