{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es6"
    ],
    "baseUrl":".",
    "paths":{
      "@scruffy/database": ["packages/database"],
      "@scruffy/database/*": ["packages/database/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
